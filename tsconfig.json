{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"declaration": true,
		"outDir": "./lib/",
		"rootDir": "./src/",
		"baseUrl": "./src/"
	},
	"exclude": [
		"./node_modules/"
	],
	"include": [
		"./src/"
	]
}
