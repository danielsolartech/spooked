{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "paths": {
      "@Spooked": [
        "core/main.ts"
      ],
      "@Core/*": [
        "core/*"
      ],
      "@Database/*": [
        "database/*"
      ],
      "@Plugins/*": [
        "plugins/*"
      ],
      "@Themes/*": [
        "themes/*"
      ],
    },
  },
  "exclude": [
    "./node_modules/",
    "./public/"
  ],
  "include": [
    "./src/",
  ],
}