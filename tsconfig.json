{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "paths": {
      "@Spooked": ["core/index.ts"],
      "@Core/*": ["core/*"],
      "@Database/*": ["database/*"],
      "@Plugins/*": ["plugins/*"],
      "@Themes/*": ["themes/*"],
    },
  },
  "exclude": [
    "./node_modules/",
    "./public/"
  ],
  "include": [
    "./src/",
  ],
}